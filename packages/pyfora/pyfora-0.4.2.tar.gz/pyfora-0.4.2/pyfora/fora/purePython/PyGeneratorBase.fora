/****************
PyGeneratorBase

This instance is a mixin that provides useful functionality for implementations of generators.
****************/

object {
   __str__: PyBoundMethod(self, fun(self) { return PyString("<generator object>") }, `__str__);

   filter: PyBoundMethod(self, fun(self, filterFunction) {
      return FilteringGenerator(self, filterFunction)
      }, `filter);

   map: PyBoundMethod(self, fun(self, elementMapper) {
      return MappingGenerator(self, elementMapper)
      }, `map);

   nest: PyBoundMethod(self, fun(self, elementMapper) {
      return NestedGenerator(self, elementMapper)
      }, `nest);

   split: PyBoundMethod(self, fun(self) { return PyNone(nothing); }, `split);

   canSplit: PyBoundMethod(self, fun(self) { return PyBool(false); }, `canSplit);

   isNestedGenerator: PyBoundMethod(self, fun(self) { PyBool(false) }, `isNestedGenerator);

   __pyfora_generator__: PyBoundMethod(self, fun(self) { self }, `__pyfora_generator__);

   associativeReduce: fun(valueSoFar, add, merge, emptyValue) {
      for val in self
         valueSoFar = add(valueSoFar, val)
      return valueSoFar
      };

   mixin PyObjectBase;
   };
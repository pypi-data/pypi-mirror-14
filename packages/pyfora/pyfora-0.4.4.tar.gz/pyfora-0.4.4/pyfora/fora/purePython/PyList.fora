class {
    member @m;
    
    //required because the AttributeError clause in the PyObjectBase mixin masks the
    //generated version of this attribute.
    ...(`Member, `@m) { @m };

    __class__: ListType;

    __getitem__: PyBoundMethod(
        self, 
        fun
        (self, Slice(s)) {
            if (s.step.__class__ is NoneType)
                return PyList(@m[s.start.@m, s.stop.@m])

            if (s.step == PyInt(0)) 
                throw ValueError("slice step cannot be zero")

            return PyList(@m[s.start.@m, s.stop.@m, s.step.@m])
            }
        (self, PyInt(ix)) { 
            try {
                @m[ix.@m]
                }
            catch ("invalid index") {
                throw IndexError(PyString("list index out of range"))
                }
            }
        (self, *args) {
            throw TypeError(PyString("list indices must be integers or slice objects"))
            },
        `__getitem__
        );

    __pyfora_generator__: PyBoundMethod(self, fun(self) {
        let ListGenerator = class {
            member @m;
            
            ...(`Member, `@m) { @m };

            operator iterator() { self.@m`(`Iter) };

            canSplit: PyBoundMethod(self, fun(self) { PyBool(size(self.@m) > 1) }, `canSplit);

            split: PyBoundMethod(self, fun(self) { 
                if (size(self.@m) <= 1) return PyNone(nothing); 

                PyTuple((ListGenerator(self.@m[,size(self.@m)/2]), ListGenerator(self.@m[size(self.@m)/2,])))
                }, `split);

            associativeReduce: fun(initValSoFar, add, merge, empty) {
                AssociativeReduce.associativeReduceIntegers(
                    initValSoFar, 
                    fun(lst, val) { add(lst, @m[val]) }, 
                    merge, 
                    empty,
                    0,
                    size(@m)
                    )
                };

            mixin PyGeneratorBase;
            };

        return ListGenerator(self.@m)
        }, `__pyfora_generator__);

    append: 
        throw InvalidPyforaOperation(
            PyString(
                "Appending to a list is a mutating operation, " +
                    "which pyfora doesn't support."
                 )
            );

    index: PyBoundMethod(self, fun(self, value) {
        for ix in sequence(size(self.@m)) {
            if (Bool(self.@m[ix] == value))
                return PyInt(ix)
            }
        throw Exception(PyString("value is not in list"))
        }, `index);

    __mul__: PyBoundMethod(self, fun(self, PyInt(other)) {
        let toReturn = [];
        for i in sequence(other.@m) {
            toReturn = toReturn + self.@m
            }
        PyList(toReturn)
        }, `__mul__);

    __eq__: PyBoundMethod(self, 
        fun(self, PyList(other)) {
            PyBool(self.@m == other.@m)
            }
        (self, _) {
            PyBool(false)
            },
        `__eq__
        );

    __ne__: PyBoundMethod(self, 
        fun(self, PyList(other)) {
            PyBool(self.@m != other.@m)
            }
            (self, _) {
            PyBool(true)
            },
        `__ne__
        );

    __gt__: PyBoundMethod(self, fun(self, PyList(other)) {
        if (size(other.@m) == size(self.@m)) {
            PyBool(false)
            }
        else if (size(self.@m) == 0) {
            PyBool(false)
            }
        else PyBool(true)
        }
        (self, PyString(other)) {
        PyBool(false)
        }
        (self, _) {
        PyBool(true)
        }, 
        `__gt__
        );

    __lt__: PyBoundMethod(self, fun(self, PyList(other)) {
        if (size(other.@m) == size(self.@m)) {
            return PyBool(false)
            }
        else if (size(self.@m) == 0) {
            return PyBool(true)
            }
        else return PyBool(false)
        }
        (self, PyString(other)) {
        PyBool(true)
        }
        (self, _) {
        PyBool(false)
        },
        `__lt__);

    __len__: PyBoundMethod(self, fun(self) {
        PyInt(Int64(size(self.@m)))
        }, `__len__);

    __str__: PyBoundMethod(self, fun(self) {
        let elts = []
        for e in self.@m
            elts = elts :: StrType(e).@m

        PyString("[" + ", ".join(elts) + "]")
        }, `__str__);

    __pyfora_concat__: PyBoundMethod(self, fun(self, other) {
        PyList(self.@m :: other)
        }, `__pyfora_concat__);

    operator match(PyList _) { (self,) };

    operator+(PyList(other)) {
        PyList(@m + other.@m)
        };

    __add__: PyBoundMethod(self, fun
            (self, PyList(...) other) {
                PyList(@m + other.@m)
                }
            (self, other) {
                throw TypeError(PyString("Can only concatenate list to list"))
                },
        `__add__
        );

    __iter__: PyBoundMethod(self, fun(self) {
        for val in @m 
            yield val
        }, `__iter__);

    operator in (elt) {
        PyBool(elt in @m)
        };

    convert(Bool _) { size(@m) > 0 };

    mixin PyObjectBase;
    };


<?xml version="1.0" encoding="utf-8"?>

<div
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:py="http://www.whads.com/ns/cocktail/templates">

    <?py-class
    video = None
    player_settings = None
    ?>

    <py:binding>
        <?py
        if self.video is None or not self.video.is_accessible():
            self.visible = False
        ?>
    </py:binding>

    <py:ready>
        <py:new py:element="self.player_settings.create_player(self.video)"/>
    </py:ready>
</div>


<div class="modal fade" id="{{ form.uid }}-modal" tabindex="-1" role="dialog" aria-labelledby="{{ form.uid }}-label">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            {% block open_tag %}
                <form role="form" method="{{ form.method }}" action="{{ form.action }}" id="{{ form.uid }}"
                      name="{{ form.name }}"
                      class="{{ form.css }}" data-cid="{{ form.cid }}"
                      {% if form.validation_ep %}data-validation-ep="{{ form.validation_ep }}"{% endif %}>
            {% endblock open_tag %}

            {% block area_hidden %}
                {% set widgets = form.get_widgets('hidden') %}
                {% if widgets %}
                    <div class="{{ form.area_hidden_css }}">
                        {% for uid, widget in widgets.items() %}
                            {{ widget }}
                        {% endfor %}
                    </div>
                {% endif %}
            {% endblock %}

            {% block area_header %}
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>

                    {% set widgets = form.get_widgets('header') %}
                    {% if widgets or form.title %}
                        <div class="{{ form.area_header_css }}">
                            {% if form.title %}
                                <h4 id="{{ form.uid }}-label" class="modal-title {{ form.title_css }}">
                                    {{ form.title | e }}
                                </h4>
                            {% endif %}
                            {% if widgets %}
                                {% for uid, widget in widgets.items() %}
                                    {{ widget }}
                                {% endfor %}
                            {% endif %}
                        </div>
                    {% endif %}
                </div>
            {% endblock %}


            <div class="modal-body">
                {% block area_body %}
                    {% set widgets = form.get_widgets('body') %}
                    {% if widgets %}
                        <div class="{{ form.area_body_css }}">
                            {% for uid, widget in widgets.items() %}
                                {{ widget }}
                            {% endfor %}
                        </div>
                    {% endif %}
                {% endblock %}
            </div>

            {% block area_footer %}
                {% set widgets = form.get_widgets('footer') %}
                {% if widgets %}
                    <div class="modal-footer {{ form.area_footer_css }}">
                        {% for uid, widget in widgets.items() %}
                            {{ widget }}
                        {% endfor %}
                    </div>
                {% endif %}
            {% endblock %}

            {% block close_tag %}
                </form>
            {% endblock close_tag %}
        </div>
    </div>
</div>














           <query id="q1"><![CDATA[
                select type, male_count, female_count from politicaApp_countvoters   
             ]]></query>      
       </queries>
   </chart>
    
    <chart id="politica2">
       <columns>
           <column>
               <id>city</id>
               <label>City</label>
               <type>string</type>
           </column>
           <column>
               <id>Voters</id>
               <label>Voters Count</label>
               <type>number</type>    
           </column>
       </columns>
       <type>ColumnChart</type>
       <queries>
           <query id="q1"><![CDATA[
                 select city , count(*) from politicaApp_candidate group by city having count(*) >4000;   
             ]]></query>      
       </queries>
   </chart>
   
   
   
   
    <chart id="politica3">
       <columns>
           <column>
               <id>age</id>
               <label>Age</label>
               <type>string</type>
           </column>
           <column>
               <id>Voters</id>
               <label>Voters Count</label>
               <type>number</type>    
           </column>
           
       </columns>
       <type>PieChart</type>
       <queries>
           <query id="q1"><![CDATA[
                 select t.range as voter_Age , count(*) as number_of_Voters from ( select case when age between 0 and 19 then ' < 19' when age between 20 and 39 then '20-39' when age between 40 and 59 then '40-59' when age between 60 and 79 then '60-79' else '> 80' end as 'range' from politicaApp_candidate ) t group by t.range;  
             ]]></query>      
       </queries>
   </chart>
   

<chart id="trackme" database="trackme">
       <handler>multiple_series_row</handler>
        <columns>
        	<column>
            	<id>time</id>
                <label>time</label>
                <type>string</type>	
            </column>
            <column>
            	<id>activity</id>
                <label>activity</label>
                <type>number</type>
            </column>
        </columns>
       <type>ColumnChart</type>
       <queries>
           <query id="q1"><![CDATA[
                 select activity_startTime as time ,activity, sum(activity_total_time) as timespent, activity_date  from tracker_activitytrackertiming where activity in ('https://docs.google.com','https://mail.google.com', 'https://www.youtube.com')group by activity , activity_startTime having activity_date between '2016-02-28' and '2016-02-29' order by timespent desc;  
             ]]></query>      
       </queries>
   </chart>




<?xml version="1.0" encoding="UTF-8"?>
<charts>
		
    <chart id="timesheet" database="hiway">
        <columns>
            <column>
            	<id>project_code</id>
                <label>Project_Code</label>
                <type>string</type>
            </column>
            <column>
            	<id>hrs</id>
                <label>Hours</label>
                <type>number</type>	
            </column>
        </columns>
        <type>ColumnChart</type>
        <queries>
            <query id="q1"><![CDATA[
	                select project_code, sum(hrs) from timesheet_timesheet  group by project_code order by sum(hrs) desc limit 5;
            ]]></query>         
        </queries>
    </chart>
    <chart id="timesheet2" database="hiway">
        <columns>
            <column>
            	<id>project_code</id>
                <label>Project_Code</label>
                <type>string</type>
            </column>
            <column>
            	<id>hrs</id>
                <label>Hours</label>
                <type>number</type>	
            </column>
        </columns>
        <type>PieChart</type>
        <queries>
            <query id="q1"><![CDATA[
	                select project_code, sum(hrs) from timesheet_timesheet group by project_code order by sum(hrs) desc limit 15
            ]]></query>
        </queries>
    </chart>
    <chart id="timesheet3" database="hiway">
        <handler>multiple_series_row</handler>
        <columns>
        	<column>
            	<id>month</id>
                <label>Month</label>
                <type>string</type>	
            </column>
            <column>
            	<id>project_code</id>
                <label>Project</label>
                <type>number</type>
            </column>
        </columns>
        <type>ColumnChart</type>
        <queries>
            <query id="q1"><![CDATA[
				select monthname(STR_TO_DATE(extract(month from day),'%%m')) as month, 	project_code , sum(hrs) from timesheet_timesheet where extract(month from day) between %(start)s and %(end)s group by project_code , month;            
		 ]]></query>
        </queries>
    </chart>
    				
    <chart id="timesheet4" database="hiway">
        <handler>multiple_series_row</handler>
        <columns>
        	<column>
            	<id>month</id>
                <label>Month</label>
                <type>date</type>	
            </column>
            <column>
            	<id>project_code</id>
                <label>Project</label>
                <type>number</type>
            </column>
        </columns>
        <type>ColumnChart</type>
        <queries>
            <query id="q1"><![CDATA[
				select day as month, 	project_code , sum(hrs) from timesheet_timesheet where extract(month from day) between %(start)s and %(end)s group by project_code , month  limit 10;            		 ]]>
				
				</query>
        
        <query id="q2"><![CDATA[
				select day as month, 	project_code , sum(hrs) from timesheet_timesheet where extract(month from day) between 1 and 12 group by project_code , month ;            		 ]]>
		</query>
        
        
        </queries>
    </chart>
    <chart id="politica">

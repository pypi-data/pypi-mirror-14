#!/usr/bin/env python
# -*- coding: utf-8 -*-

from optparse import OptionParser

parser = OptionParser()
parser.add_option("-s", "--sources",
  action="store_true", dest="sources", default=False,
  help="include web sources")
parser.add_option("-p", "--ping",
  action="store_true", dest="ping", default=False,
  help="send only HEAD requests")

(options, args) = parser.parse_args()


def main():
  print options
  print args

main()
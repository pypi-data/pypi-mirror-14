#!/usr/bin/env bash

IFS=
! [ -e .git ] && echo "ERROR: .git/ NOT EXISTS" && exit 1
count="$(git rev-list --count 2> /dev/null)"
[[ -z $count ]] && echo "init" && exit 0

function count() {
	[[ $1 != *"
"* ]] && echo 1 && return
	echo "$@" | wc -l | tr -d ' '
}

function add() {
	msg="$msg
$1"
}

function count() {
	[[ $1 != *"
"* ]] && echo 1 && return
	echo "$@" | wc -l | tr -d ' '
}

function quote() {
	[[ $1 != *" "* ]] && echo "$1" && return
	echo "'$1'"
}

function comma() {
	echo "$@" | tr '\n' ',' | rev | cut -c 3- | rev
}

status="$(git status -s)" || exit
deleted="$(echo "$status" | grep ^'D ' | cut -c 4- | sed 'H;1h;$!d;x;y/\n/,/')"
renamed="$(echo "$status" | grep ^'R ' | cut -c 4- | sed 'H;1h;$!d;x;y/\n/,/')"
added="$(echo "$status" | grep ^'A ' | cut -c 4- | sed 'H;1h;$!d;x;y/\n/,/')"
modified="$(echo "$status" | grep ^'M ' | cut -c 4- | sed 'H;1h;$!d;x;y/\n/,/')"
msg=
[[ -n $renamed ]] && add "$renamed"
[[ -n $added ]] && add "+$added"

[[ -n $modified ]] && add "^$modified"
[[ -n $deleted ]] && add "-$deleted"

echo "$msg" | grep -v ^$ | perl -p -e 's/\n/; /' | rev | cut -c 3- | rev

